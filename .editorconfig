[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[{*.cjs,*.js}]
ij_javascript_spaces_within_imports = true
ij_javascript_spaces_within_object_literal_braces = true
